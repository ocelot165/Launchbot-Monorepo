{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "ES2015",
    "outDir": ".build",
    "moduleResolution": "node",
    "rootDir": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "strict": false
  },
  "ts-node": {
    // It is faster to skip typechecking.
    // Remove if you want ts-node to do typechecking.
    "transpileOnly": true,
    "files": true,
    "esm": true
  },
}
